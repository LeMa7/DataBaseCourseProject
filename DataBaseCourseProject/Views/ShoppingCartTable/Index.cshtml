@model BaseListModel<ShoppingCart>
@{
    var pageCount = Math.Ceiling(Convert.ToDouble(Model.EntitiesCount) / 150);
    ViewData["Title"] = "ShoppingCarts";
}

<div class="container">
    <h1 class="text-center">Shopping Carts</h1>
    <div>
        <div id="items">
            @await Html.PartialAsync("_Items", Model)
        </div>
        <div class="mt-4">
            <a class="nav-link text-white text-light btn btn-dark btn-create"
               asp-area=""
               asp-controller="ShoppingCartTable"
               asp-action="Create">Create</a>
        </div>
        @for (int pageNum = 1; pageNum <= pageCount; pageNum++)
        {
            <button class="btn btn-link">@pageNum</button>
        }
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $(".btn-link").click(function () {
                loadItems($(this).html(), 'ShoppingCartTable');
            });
        });
    </script>
}