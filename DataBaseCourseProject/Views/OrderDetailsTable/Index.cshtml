@model List<OrderDetails>
@{
    ViewData["Title"] = "Order Details";
}

<h1 class="text-center">Order Details</h1>

<div>
    <div>
        <table style="width:100%" class="text-center">
            <tr>
                <td style="width:20%">Id</td>
                <td style="width:20%">Order Id</td>
                <td style="width:20%">Product Id</td>
                <td style="width:20%">Quantity</td>
                <td style="width:20%"></td>
            </tr>
            @foreach (var orderDetails in Model)
            {
                <tr class="border-bottom">
                    <td style="width:20%">@orderDetails.Id</td>
                    <td style="width:20%">@orderDetails.OrderId</td>
                    <td style="width:20%">@orderDetails.ProductId</td>
                    <td style="width:20%">@orderDetails.Quantity</td>
                    <td style="width:20%"><a class="btn btn-danger mt-1 mb-1" asp-controller="OrderDetailsTable" asp-action="Delete" asp-route-id="@orderDetails.Id">Delete</a></td>
                </tr>
            }
        </table>
    </div>
    <div class="mt-4">
        <a class="nav-link text-white text-light btn btn-dark btn-create"
           asp-area=""
           asp-controller="OrderDetailsTable"
           asp-action="Create">Create</a>
    </div>
</div>