@model List<Order>
@{
    ViewData["Title"] = "Orders";
}

<h1 class="text-center">Orders</h1>

<div>
    <div>
        <table style="width:100%" class="text-center">
            <tr>
                <td style="width:16%">Id</td>
                <td style="width:16%">User Id</td>
                <td style="width:16%">Order Date</td>
                <td style="width:16%">Ship Date</td>
                <td style="width:16%">Adress</td>
                <td style="width:16%"></td>
            </tr>
            @foreach (var order in Model)
            {
                <tr class="border-bottom">
                    <td style="width:16%">@order.Id</td>
                    <td style="width:16%">@order.UserId</td>
                    <td style="width:16%">@order.OrderDate.Value.ToShortDateString()</td>
                    <td style="width:16%">@order.ShipDate.Value.ToShortDateString()</td>
                    <td style="width:16%">@order.Adress</td>
                    <td style="width:16%"><a class="btn btn-danger mt-1 mb-1" asp-controller="OrderTable" asp-action="Delete" asp-route-id="@order.Id">Delete</a></td>
                </tr>
            }
        </table>
    </div>
    <div class="mt-4">
        <a class="nav-link text-white text-light btn btn-dark btn-create"
           asp-area=""
           asp-controller="OrderTable"
           asp-action="Create">Create</a>
    </div>
</div>