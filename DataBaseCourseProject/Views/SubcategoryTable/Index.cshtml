@model List<Subcategory>
@{
    ViewData["Title"] = "Subcategories";
}

<h1 class="text-center">Subcategories</h1>

<div>
    <div>
        <table style="width:100%" class="text-center">
            <tr>
                <td style="width:25%">Id</td>
                <td style="width:25%">Name</td>
                <td style="width:25%">CategoryId</td>
                <td style="width:25%"></td>
            </tr>
            @foreach (var subcategory in Model)
            {
                <tr class="border-bottom">
                    <td style="width:25%">@subcategory.Id</td>
                    <td style="width:25%">@subcategory.Name</td>
                    <td style="width:25%">@subcategory.CategoryId</td>
                    <td style="width:25%"><a class="btn btn-danger mt-1 mb-1" asp-controller="SubcategoryTable" asp-action="Delete" asp-route-id="@subcategory.Id">Delete</a></td>
                </tr>
            }
        </table>
    </div>
    <div class="mt-4">
        <a class="nav-link text-white text-light btn btn-dark btn-create"
           asp-area=""
           asp-controller="SubcategoryTable"
           asp-action="Create">Create</a>
    </div>
</div>