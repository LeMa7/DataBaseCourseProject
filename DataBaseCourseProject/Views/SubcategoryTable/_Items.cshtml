@model BaseListModel<Subcategory>

<div>
    <table style="width:100%" class="text-center">
        <tr>
            <td style="width:20%">Id</td>
            <td style="width:20%">Name</td>
            <td style="width:20%">CategoryId</td>
            <td style="width:20%"></td>
            <td style="width:20%"></td>
        </tr>
        @foreach (var subcategory in Model.Entities)
        {
            <tr class="border-bottom">
                <td style="width:20%">@subcategory.Id</td>
                <td style="width:20%">@subcategory.Name</td>
                <td style="width:20%">@subcategory.CategoryId</td>
                <td style="width:20%"><a class="btn btn-danger mt-1 mb-1" asp-controller="SubcategoryTable" asp-action="Delete" asp-route-id="@subcategory.Id">Delete</a></td>
                <td style="width:20%"><a class="btn btn-warning mt-1 mb-1" asp-controller="SubcategoryTable" asp-action="Update" asp-route-id="@subcategory.Id">Update</a></td>
            </tr>
        }
    </table>
</div>