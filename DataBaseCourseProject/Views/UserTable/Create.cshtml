@model User

@{
    var action = Model.Id == null ? "Create" : "Update";
    ViewData["Title"] = action;
}

<div class="container">
    <h1 class="text-center">@action User</h1>
    <form asp-controller="UserTable" asp-action="@action">
        <div class="form-group form-element">
            <label asp-for="FirstName" class="mb-0">First Name</label><span class="text-danger">*</span>
            <input type="text" asp-for="FirstName" class="form-control" />
        </div>
        <div class="form-group mt-2 form-element">
            <label asp-for="LastName" class="mb-0">Last Name</label><span class="text-danger">*</span>
            <input type="text" asp-for="LastName" class="form-control" />
        </div>
        <div class="form-group mt-2 form-element">
            <label asp-for="MiddleName" class="mb-0">Middle Name</label>
            <input type="text" asp-for="MiddleName" class="form-control" />
        </div>
        <div class="form-group mt-2 form-element">
            <label asp-for="Email" class="mb-0">Email</label><span class="text-danger">*</span>
            <input type="text" asp-for="Email" class="form-control" />
        </div>
        <div class="form-group mt-2 form-element">
            <label asp-for="PhoneNumber" class="mb-0">Phone Number</label><span class="text-danger">*</span>
            <input type="text" asp-for="PhoneNumber" class="form-control" />
        </div>
        <div class="form-group mt-2 form-element">
            <label asp-for="Password" class="mb-0">Password</label><span class="text-danger">*</span>
            <input type="text" asp-for="Password" class="form-control" />
        </div>
        <div class="form-group mt-4 text-center">
            <input type="submit" value="@action" class="btn btn-dark text-light btn-create" />
        </div>
    </form>
</div>