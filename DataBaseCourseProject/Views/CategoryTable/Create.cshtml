@model Category

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center">Create category</h1>

<form asp-controller="CategoryTable" asp-action="Create">
    <div class="form-group mt-2 form-element">
        <label asp-for="Name" class="mb-0">Name</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group mt-4 text-center">
        <input type="submit" value="Create" class="btn-create btn btn-dark text-light" />
    </div>
</form>