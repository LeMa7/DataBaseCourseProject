@model List<ShoppingCartDetails>
@{
    ViewData["Title"] = "Shopping Cart Details";
}

<h1 class="text-center">Shopping Cart Details</h1>

<div>
    <div>
        <table style="width:100%" class="text-center">
            <tr>
                <td style="width:20%">Id</td>
                <td style="width:20%">Shopping Cart Id</td>
                <td style="width:20%">Product Id</td>
                <td style="width:20%">Quantity</td>
                <td style="width:20%"></td>
            </tr>
            @foreach (var shoppingCartDetails in Model)
            {
                <tr class="border-bottom">
                    <td style="width:20%">@shoppingCartDetails.Id</td>
                    <td style="width:20%">@shoppingCartDetails.ShoppingCartId</td>
                    <td style="width:20%">@shoppingCartDetails.ProductId</td>
                    <td style="width:20%">@shoppingCartDetails.Quantity</td>
                    <td style="width:20%">
                        <a class="btn btn-danger mt-1 mb-1" asp-controller="ShoppingCartDetailsTable" asp-action="Delete" asp-route-id="@shoppingCartDetails.Id">
                            Delete
                        </a>
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="mt-4">
        <a class="nav-link text-white text-light btn btn-dark btn-create"
           asp-area=""
           asp-controller="ShoppingCartDetailsTable"
           asp-action="Create">Create</a>
    </div>
</div>