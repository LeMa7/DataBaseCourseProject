@model List<Producer>
@{
    ViewData["Title"] = "Producers";
}

<h1 class="text-center">Producers</h1>

<div>
    <div>
        <table style="width:100%" class="text-center">
            <tr>
                <td style="width:25%">Id</td>
                <td style="width:25%">Name</td>
                <td style="width:25%"></td>
                <td style="width:25%"></td>
            </tr>
            @foreach (var producer in Model)
            {
                <tr class="border-bottom">
                    <td style="width:25%">@producer.Id</td>
                    <td style="width:25%">@producer.Name</td>
                    <td style="width:25%"><a class="btn btn-danger mt-1 mb-1" asp-controller="ProducerTable" asp-action="Delete" asp-route-id="@producer.Id">Delete</a></td>
                    <td style="width:25%"><a class="btn btn-warning mt-1 mb-1" asp-controller="ProducerTable" asp-action="Update" asp-route-id="@producer.Id">Update</a></td>
                </tr>
            }
        </table>
    </div>
    <div class="mt-4">
        <a class="nav-link text-white text-light btn btn-dark btn-create"
           asp-area=""
           asp-controller="ProducerTable"
           asp-action="Create">Create</a>
    </div>
</div>