@model ProducerCreateModel

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center">Create producer</h1>

<form asp-controller="ProducerTable" asp-action="Create" class="text-center">
    <div class="form-group" style="width:50%;margin:auto">
        <label asp-for="Name">Producer Name</label>
        <br />
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group mt-2">
        <input type="submit" value="Create" class="btn btn-dark text-light" />
    </div>
</form>