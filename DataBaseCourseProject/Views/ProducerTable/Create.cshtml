@model Producer

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center">Create producer</h1>

<form asp-controller="ProducerTable" asp-action="Create">
    <div class="form-group mt-2 form-element">
        <label asp-for="Name" class="mb-0">Producer Name</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group mt-4">
        <input type="submit" value="Create" class="btn-create btn btn-dark text-light"/>
    </div>
</form>