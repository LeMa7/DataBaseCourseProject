@model DifferenceModel

@{
    ViewData["Title"] = "GetDifference";
}

<div class="container">
    <h1 class="mt-3 text-center">Get Difference</h1>
    <form asp-controller="Action" asp-action="GetDifference" method="get" class="mt-3">
        <div class="form-group form-element">
            <label asp-for="FirstId" class="mb-0">First Id</label>
            <input type="number" asp-for="FirstId" class="form-control" />
        </div>
        <div class="form-group form-element">
            <label asp-for="SecondId" class="mb-0">Second Id</label>
            <input type="number" asp-for="SecondId" class="form-control" />
        </div>
        <div class="form-group text-center mt-2">
            <input class="btn btn-dark btn-create" type="submit" value="Find" />
        </div>
    </form>
    <div class="mt-5">
        @Html.Partial("_DifferenceResult", Model)
    </div>
</div>